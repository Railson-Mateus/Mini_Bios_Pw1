<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- CSS only -->
    <link
      rel="stylesheet"
      href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css"
    />
    <title>Mini Bios - Perfil</title>
  </head>
  <body>
    <style>
      input{ margin-bottom: 10px; margin-top: 10px; }
    </style>
    <div class="navbar navbar-default navbar-static-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Mini Bios</a>
        </div>
        <ul class="nav navbar-nav navbar-right">
          {{#if currentUser}}
            <li>
              <a href="/edit">
                Olá,
                {{getName currentUser}}
              </a>
            </li>
            <li><a href="/logout">Sair</a></li>
          {{else}}
            <li><a href="/login">Entrar</a></li>
            <li><a href="/signup">Cadastre-se</a></li>
          {{/if}}
        </ul>
      </div>
    </div>
    <div>
      <div class="container">
        <h1>Atualize seu perfil</h1>

        <form action="/edit" method="post">
          <input
            name="displayname"
            type="text"
            class="form-control"
            placeholder="Nome de exibição"
            value="{{getName currentUser}}"
          />
          <textarea
            name="bio"
            class="form-control"
            placeholder="Conte um pouco sobre você!"
          >{{getBio currentUser}}</textarea>
          <input
            type="submit"
            value="Atualizar"
            class="btn btn-primary btn-block"
          />
        </form>
      </div>
    </div>

  </body>
</html>